<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/content_vert_padding"
    android:paddingLeft="@dimen/content_horz_padding"
    android:paddingRight="@dimen/content_horz_padding"
    android:paddingTop="@dimen/content_vert_padding"
    android:paddingStart="@dimen/content_horz_padding"
    android:paddingEnd="@dimen/content_horz_padding">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EditTextTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/title"
                android:hint="@string/title" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/CheckBoxEnabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enabled"/>

            <CheckBox
                android:id="@+id/CheckBoxZap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="@string/zap"
                android:layout_marginStart="30dp"/>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EditTextDescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/description"
                android:hint="@string/description"
                android:singleLine="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/TextViewBeginTitle"
            style="@style/SimpleHeaderSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/begin_time"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextViewBeginDate"
                style="@style/SelectableItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="@string/begin_date"
                android:focusable="true"
                android:paddingStart="3dp"
                android:paddingLeft="3dp"
                android:paddingTop="8dp"
                android:paddingEnd="3dp"
                android:paddingRight="3dp"
                android:paddingBottom="8dp"
                android:text="..."
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/TextViewBeginTime"
                style="@style/SelectableItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="@string/begin_time"
                android:focusable="true"
                android:paddingStart="3dp"
                android:paddingLeft="3dp"
                android:paddingTop="8dp"
                android:paddingEnd="3dp"
                android:paddingRight="3dp"
                android:paddingBottom="8dp"
                android:text="..."
                android:textAppearance="@android:style/TextAppearance.Medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextViewTime"
                style="@style/SimpleHeaderSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/end_time"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextViewEndDate"
                style="@style/SelectableItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="@string/end_date"
                android:focusable="true"
                android:paddingStart="3dp"
                android:paddingLeft="3dp"
                android:paddingTop="8dp"
                android:paddingEnd="3dp"
                android:paddingRight="3dp"
                android:paddingBottom="8dp"
                android:text="..."
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/TextViewEndTime"
                style="@style/SelectableItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="@string/end_time"
                android:focusable="true"
                android:paddingStart="3dp"
                android:paddingLeft="3dp"
                android:paddingTop="8dp"
                android:paddingEnd="3dp"
                android:paddingRight="3dp"
                android:paddingBottom="8dp"
                android:text="..."
                android:textAppearance="@android:style/TextAppearance.Medium" />
        </LinearLayout>

        <TextView
            android:id="@+id/TextViewRepeatedTitle"
            style="@style/SimpleHeaderSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/repeatings"/>

        <TextView
            android:id="@+id/TextViewRepeated"
            style="@style/SelectableItem"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:contentDescription="@string/repeatings"
            android:focusable="true"
            android:paddingStart="3dp"
            android:paddingLeft="3dp"
            android:paddingTop="8dp"
            android:paddingEnd="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="8dp"
            android:text="@+id/TextViewRepeated"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <TextView
            android:id="@+id/TextViewServiceTitle"
            style="@style/SimpleHeaderSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/service"/>

        <TextView
            android:id="@+id/TextViewService"
            style="@style/SelectableItem"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:contentDescription="@string/service"
            android:focusable="true"
            android:paddingStart="3dp"
            android:paddingLeft="3dp"
            android:paddingTop="8dp"
            android:paddingEnd="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="8dp"
            android:text="@+id/TextViewService"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <TextView
            android:id="@+id/TextViewAfterEvent"
            style="@style/SimpleHeaderSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/afterevent"/>

        <Spinner
            android:id="@+id/SpinnerAfterEvent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/afterevent"
            android:paddingStart="3dp"
            android:paddingLeft="3dp"
            android:paddingTop="8dp"
            android:paddingEnd="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/TextViewLocation"
            style="@style/SimpleHeaderSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/location"/>

        <Spinner
            android:id="@+id/SpinnerLocation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/location"
            android:paddingStart="3dp"
            android:paddingLeft="3dp"
            android:paddingTop="8dp"
            android:paddingEnd="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/TextViewTagsTitle"
            style="@style/SimpleHeaderSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/tags"/>

        <TextView
            android:id="@+id/TextViewTags"
            style="@style/SelectableItem"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="@string/tags"
            android:focusable="true"
            android:paddingStart="3dp"
            android:paddingLeft="3dp"
            android:paddingTop="8dp"
            android:paddingEnd="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="8dp"
            android:text="@+id/TextViewTags"
            android:textAppearance="@android:style/TextAppearance.Medium" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
